{
  "openapi": "3.0.2",
  "info": {
    "title": "IU7 WEB API",
    "version": "1.0"
  },
  "servers": [
    { "url": "http://localhost/" },
    { "url": "http://localhost/mirror1" },
    { "url": "http://localhost:3000/" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "Endpoints for getting and working with users"
    },
    {
      "name": "Listings",
      "description": "Endpoints for getting and working with advertisements"
    },
    {
      "name": "Rents",
      "description": "Endpoints for getting and working with rents"
    }
  ],
  "paths": {
    "/api/v1/listings": {
      "post": {
        "tags": ["Listings"],
        "summary": "Create a new advertisement",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "cost": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Advertisement created successfully"
          }
        }
      },
      "get": {
        "tags": ["Listings"],
        "summary": "Get advertisements",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "login",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "rentDates",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Advertisements"
          }
        }
      },
      "delete": {
        "tags": ["Listings"],
        "summary": "Delete advertisements by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Advertisement deleted successfully"
          }
        }
      },
      "patch": {
        "tags": ["Listings"],
        "summary": "Update advertisement",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "adId",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string",
                    "format": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  },
                  "score": {
                    "type": "number"
                  },
                  "role": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Advertisement approved successfully"
          }
        }
      }
    },
    "/api/v1/rents": {
      "post": {
        "tags": ["Rents"],
        "summary": "Create a new rent",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "adId",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "format": "date"
                  },
                  "to": {
                    "type": "string",
                    "format": "date"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Rent created successfully"
          }
        }
      },
      "get": {
        "tags": ["Rents"],
        "summary": "Get rents",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "adId",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "path",
            "name": "userId",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Rents"
          }
        }
      }
    },
    "/api/v1/auth": {
      "get": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [
          {
            "name": "login",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "password"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully"
          }
        }
      },

      "post": {
        "tags": ["Auth"],
        "summary": "User signup",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User signed up successfully"
          }
        }
      }
    },
    "/api/v1/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "Get users",
        "parameters": [
          {
            "in": "path",
            "name": "login",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return users"
          }
        }
      }
    }
  }
}
