{
  "name": "web",
  "module": "index.ts",
  "main": "build/index.js",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node-fetch": "2.6.1",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitest/coverage-c8": "^0.30.1",
    "allure-jest": "^2.9.2",
    "allure-js-commons": "^2.9.2",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest-mock-extended": "^3.0.5",
    "prettier-plugin-ejs": "^0.0.10",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsup": "^6.7.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "tsc",
    "start": "yarn run build && node ./build/src/index.js",
    "start:prod": "yarn run build && NODE_ENV=production node ./build/src/index.js",
    "start:docker": "yarn prisma migrate deploy && yarn start",
    "start:docker-mirror": "yarn prisma db pull && yarn start",
    "start:test": "yarn run build && dotenv -e .env.test -- node ./build/src/index.js",
    "lint": "eslint .",
    "fix": "eslint --fix --ext .ts .",
    "coverage": "vitest run --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dummy-db:up": "docker compose up dummy-db --build -d",
    "docker:dummy-db:down": "docker compose down dummy-db",
    "docker:dummy-db:migrate": "dotenv -e .env.test -- yarn prisma migrate deploy",
    "test": "dotenv -e .env.test -- jest",
    "test:unit": "dotenv -e .env.test -- jest tests/unit",
    "test:int": "dotenv -e .env.test -- jest tests/integration",
    "test:e2e": "dotenv -e .env.test -- jest tests/e2e --forceExit",
    "allure": "allure serve ./allure-results"
  },
  "dependencies": {
    "@prisma/client": "5.5.2",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.39.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "2.6.1",
    "pg": "^8.10.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0"
  }
}
