generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Advertisement {
  id          String  @id
  description String
  isApproved  Boolean
  cost        Float
  score       Float
  scoreCount  Int
  address     String
  ownerId     String
  user        User    @relation(fields: [ownerId], references: [id])
  rent        Rent[]
}

model Rent {
  id            String        @id
  dateUntil     DateTime
  dateFrom      DateTime
  userId        String
  adId          String
  advertisement Advertisement @relation(fields: [adId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
}

model User {
  id            String          @id
  login         String          @unique
  password      String
  score         Float
  scoreCount    Int             @default(0)
  role          Int
  Advertisement Advertisement[]
  Rent          Rent[]
}
